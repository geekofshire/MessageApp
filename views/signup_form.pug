extends layout 

block content 
  h1 #[strong #{title}]

  form.auth_form(method='POST' action='/sign-up')
    div.form
      label(for="first_name") First Name: 
      input#first_name(type='text' required='true' name='first_name' maxLength=35)
    div.form 
      label(for="last_name") Last Name: 
      input#last_name(type='text' name='last_name' required='true' maxLength=35)
    div.form 
      label(for="user_name") Username: 
      input#user_name(type='text' name='user_name' required='true' maxLength=10)
    div.form
      label(for="password") Password: 
      input#password(type='password' name='password' required='true' minLength=5)

    button.btn(type="submit") Submit

  if errors
    ul
      for error in errors
        li!= error.msg
